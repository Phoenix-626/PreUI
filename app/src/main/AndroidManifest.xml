<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
    package="com.itsaky.preui" >

	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />
	<application
        android:allowBackup="true"
        android:icon="@drawable/ic_preui"
        android:label="@string/app_name"
        android:theme="@style/MyTheme"
		android:resizeableActivity = "true">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
		<activity
			android:name=".activities.ShadesActivity"
			android:screenOrientation="portrait"
			android:label="Shades"/>
		<activity
			android:name=".activities.PreviewActivity"
			android:screenOrientation="portrait"
			android:label="@string/preview_app_title"/>
		<activity
			android:name=".activities.AboutDevActivity"
			android:screenOrientation="portrait"
			android:label="@string/preview_app_title"/>
    </application>

</manifest>

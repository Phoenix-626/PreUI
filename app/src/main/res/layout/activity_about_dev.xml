<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="@android:color/white">

	<android.support.v7.widget.Toolbar
		android:layout_height="wrap_content"
		android:layout_width="match_parent"
		android:background="@color/colorPrimary"
		app:theme="@style/PreUIToolbar"
		android:id="@+id/activityaboutdevToolbar1"/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content">

		<RelativeLayout
			android:id="@+id/layoutTop"
			android:layout_width="match_parent"
			android:layout_height="150dp"
			android:background="@drawable/ic_about_dev_background">

		</RelativeLayout>

		<RelativeLayout
			android:id="@+id/layoutBottom"
			android:layout_width="match_parent"
			android:layout_height="70dp"
			android:layout_below="@id/layoutTop"
			android:background="@android:color/white">

		</RelativeLayout>

		<de.hdodenhof.circleimageview.CircleImageView
			android:id="@+id/overlapImage"
			android:layout_width="120dp"
			android:layout_height="120dp"
			android:layout_above="@id/layoutBottom"
			android:layout_centerHorizontal="true"
			android:layout_marginBottom="-60dp"
			android:src="@drawable/ic_dev_profile"
			app:civ_border_width="1dp"
			app:civ_border_color="@color/colorPrimary2"
			app:civ_circle_background_color="@android:color/white"
			android:elevation="8dp"/>

	</RelativeLayout>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/background_layout_about_contact"
		android:elevation="5dp"
		android:layout_margin="5dp"
		android:id="@+id/activityaboutdevLinearLayout1"
		android:padding="4dp"
		android:gravity="center_horizontal"
		android:layout_marginTop="70dp"
		android:layout_below="@id/overlapImage">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Akash Yadav"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:layout_marginBottom="3dp"
			android:textColor="@android:color/black"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Android App Developer, Student"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="@android:color/black"
			android:layout_marginBottom="3dp"/>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="3dp"
			android:gravity="center">

			<ImageView
				app:srcCompat="@drawable/ic_location"
				android:layout_width="20dp"
				android:layout_height="20dp"/>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="Pune, Maharashtra, India"
				android:textAppearance="?android:attr/textAppearanceSmall"
				android:layout_marginLeft="5dp"/>

		</LinearLayout>

	</LinearLayout>

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:background="@drawable/background_layout_about_contact"
		android:elevation="5dp"
		android:layout_margin="5dp"
		android:layout_below="@id/activityaboutdevLinearLayout1">

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:weightSum="3"
			android:orientation="horizontal">

			<RelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="70dp"
				android:layout_weight="1.0"
				android:padding="6dp"
				android:clickable="true"
				android:background="?attr/selectableItemBackground"
				android:layout_marginTop="4dp"
				android:layout_marginLeft="4dp"
				android:layout_marginBottom="4dp"
				android:layout_marginRight="4dp"
				android:id="@+id/activityaboutdevRelativeLayout1">

				<ImageView
					app:srcCompat="@drawable/ic_github"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:id="@+id/activityaboutImageView2"
					android:layout_centerHorizontal="true"
					android:padding="6dp"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Github"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_below="@id/activityaboutImageView2"
					android:layout_centerHorizontal="true"
					android:gravity="center"
					android:textColor="@android:color/black"/>

			</RelativeLayout>

			<RelativeLayout
				android:layout_width="wrap_content"
				android:layout_height="70dp"
				android:layout_weight="1.0"
				android:padding="6dp"
				android:clickable="true"
				android:background="?attr/selectableItemBackground"
				android:layout_marginTop="4dp"
				android:layout_marginBottom="4dp"
				android:layout_marginRight="4dp"
				android:id="@+id/activityaboutdevRelativeLayout2">

				<ImageView
					app:srcCompat="@drawable/ic_instagram"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:id="@+id/activityaboutImageView2"
					android:layout_centerHorizontal="true"
					android:padding="6dp"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Instagram"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_below="@id/activityaboutImageView2"
					android:layout_centerHorizontal="true"
					android:gravity="center"
					android:textColor="@android:color/black"/>

			</RelativeLayout>

			<RelativeLayout
				android:clickable="true"
				android:layout_width="wrap_content"
				android:layout_height="70dp"
				android:layout_weight="1.0"
				android:padding="6dp"
				android:background="?attr/selectableItemBackground"
				android:layout_marginTop="4dp"
				android:layout_marginBottom="4dp"
				android:layout_marginRight="4dp"
				android:id="@+id/activityaboutdevRelativeLayout3">

				<ImageView
					app:srcCompat="@drawable/ic_telegram"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:id="@+id/activityaboutImageView2"
					android:layout_centerHorizontal="true"
					android:padding="6dp"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Telegram"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_below="@id/activityaboutImageView2"
					android:layout_centerHorizontal="true"
					android:gravity="center"
					android:textColor="@android:color/black"/>

			</RelativeLayout>

		</LinearLayout>

		<LinearLayout
			android:layout_height="wrap_content"
			android:layout_width="match_parent"
			android:weightSum="2"
			android:orientation="horizontal">

			<RelativeLayout
				android:clickable="true"
				android:layout_width="wrap_content"
				android:layout_height="70dp"
				android:layout_weight="1.0"
				android:padding="6dp"
				android:background="?attr/selectableItemBackground"
				android:layout_marginTop="4dp"
				android:layout_marginBottom="4dp"
				android:layout_marginRight="4dp"
				android:id="@+id/activityaboutdevRelativeLayout4">

				<ImageView
					app:srcCompat="@drawable/ic_suggest"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:id="@+id/activityaboutImageView2"
					android:layout_centerHorizontal="true"
					android:padding="6dp"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="Email"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_below="@id/activityaboutImageView2"
					android:layout_centerHorizontal="true"
					android:gravity="center"
					android:textColor="@android:color/black"/>

			</RelativeLayout>

			<RelativeLayout
				android:clickable="true"
				android:layout_width="wrap_content"
				android:layout_height="70dp"
				android:layout_weight="1.0"
				android:padding="6dp"
				android:background="?attr/selectableItemBackground"
				android:layout_marginTop="4dp"
				android:layout_marginBottom="4dp"
				android:layout_marginRight="4dp"
				android:id="@+id/activityaboutdevRelativeLayout5">

				<ImageView
					app:srcCompat="@drawable/ic_youtube"
					android:layout_width="40dp"
					android:layout_height="40dp"
					android:id="@+id/activityaboutImageView2"
					android:layout_centerHorizontal="true"
					android:padding="6dp"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:text="YouTube"
					android:textAppearance="?android:attr/textAppearanceSmall"
					android:layout_below="@id/activityaboutImageView2"
					android:layout_centerHorizontal="true"
					android:gravity="center"
					android:textColor="@android:color/black"/>

			</RelativeLayout>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>


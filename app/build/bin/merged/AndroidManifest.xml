<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.itsaky.preui"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="21"
        android:targetSdkVersion="28" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.REQUEST_INSTALL_PACKAGES" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_preui"
        android:label="@string/app_name"
        android:resizeableActivity="true"
        android:theme="@style/MyTheme" >
        <activity
            android:name="com.itsaky.preui.activities.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.itsaky.preui.activities.ShadesActivity"
            android:label="Shades"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.itsaky.preui.activities.PreviewActivity"
            android:label="@string/preview_app_title"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.itsaky.preui.activities.AboutDevActivity"
            android:label="@string/preview_app_title"
            android:screenOrientation="portrait" />
    </application>

</manifest>